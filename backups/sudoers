Defaults	env_reset
Defaults	mail_badpass
Defaults	secure_path="/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin"
Defaults    env_keep +="CUSTOM_LOGDIR"
Defaults    env_keep +="DISPLAY"

# Host alias specification

# User alias specification

# Cmnd alias specification

# User privilege specification
root	ALL=(ALL:ALL) ALL

# Allow members of group sudo to execute any command
%sudo	ALL=(ALL:ALL) ALL

# See sudoers(5) for more information on "#include" directives:

#includedir /etc/sudoers.d
{USER_PLACEHOLDER} 	ALL=(ALL) ALL
{USER_PLACEHOLDER}	ALL=NOPASSWD: /usr/sbin/rtcwake
{USER_PLACEHOLDER}	ALL=NOPASSWD: /usr/sbin/smartctl
{USER_PLACEHOLDER}	ALL=NOPASSWD: /usr/sbin/pm-suspend
{USER_PLACEHOLDER}	ALL=NOPASSWD: /usr/sbin/hddtemp
{USER_PLACEHOLDER}	ALL=NOPASSWD: /sbin/shutdown
{USER_PLACEHOLDER}	ALL=NOPASSWD: /usr/bin/nvidia-bug-report.sh
{USER_PLACEHOLDER}  ALL=NOPASSWD: /data/dev/scripts/file_backup_scripts/data_backup_work
