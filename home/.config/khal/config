[calendars]
[[work]]
color = dark cyan
path = /data/.calendars/work
type = calendar

[locale]
timeformat = %H:%M
dateformat = %d/%m/%Y
longdateformat = %d/%m/%Y
datetimeformat = %d/%m/%Y %H:%M
longdatetimeformat = %d/%m/%Y %H:%M

[default]
highlight_event_days = True
default_calendar = work
#timedelta = 4d  # added later (wasn't present in ver 0.8.4)

[highlight_days]
multiple = light cyan  # as in if events from different calendars land on same date

[view]
event_view_always_visible = True
