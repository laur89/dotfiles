# vim: ft=msmtp
#
# Config file for msmtp (sudo apt-get install msmtp); for sending mails from shell.
# File location: $HOME
# Same file both for client and server.
# If msmtp complains about permissions, then: 'sudo chmod 0600 $HOME/.msmtprc'
# Set default values for all following accounts.
defaults
tls on
tls_starttls on
tls_trust_file /etc/ssl/certs/ca-certificates.crt
logfile ~/.msmtp.log
auth on
protocol smtp
port 587

# A Gmail service
account gmail
host smtp.gmail.com
from client_report
user server.report.2axf5wl
passwordeval getnetrc server.report.2axf5wl@gmail.com
#passwordeval gpg -d ~/.msmtp.password.gpg

# A WH service:
account work
host localhost
port 1025
from Laur Aliste
# turn security off:
auth plain
tls off
#
user laur.aliste@williamhill.com
passwordeval getnetrc laur.aliste@williamhill.com

###################################
# Set default account:
account default : gmail

