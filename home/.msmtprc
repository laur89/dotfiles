# Config file for msmtp (sudo apt-get install msmtp); for sending mails from shell.
# File location: $HOME
# Same file both for client and server.
# If msmtp complains about permissions, then: 'sudo chmod 0600 $HOME/.msmtprc'
# Set default values for all following accounts.
       defaults
       tls on
       tls_starttls on
       tls_trust_file /etc/ssl/certs/ca-certificates.crt
       logfile ~/.msmtp.log

       # A Gmail service
       account gmail
       host smtp.gmail.com
       port 587
       from client_report
       auth on
       user server.report.2axf5wl
       password pass

       #passwordeval gpg -d ~/.msmtp.password.gpg

       # A WH service:
       account wh
       host localhost
       port 1025
       from Laur Aliste
       auth on
       # requires 'auth plain'?
       user laur.aliste@williamhill.com
       password pass

       ###################################
       # Set a default account
       account default : gmail

