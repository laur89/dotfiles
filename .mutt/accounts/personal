# signature:
unset sig_dashes  # If set, a line containing "-- " (note the trailing space) will be inserted before your $signature
unset signature   # remove our signature

set spool_file = "+personal/INBOX"

unmy_hdr *  # reset any custom headers set by my_hdr function (possibly by other account config)

macro index,pager a "\
    <save-message>=personal/archive<enter>" \
    "Archive message"
